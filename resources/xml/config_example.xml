<?xml version="1.0" encoding="utf-8"?>
<DS xmlns="http://www.eprosima.com/XMLSchemas/discovery-server">

  <servers>
    <server name ="server1" prefix="4D.49.47.55.45.4c.5f.42.41.52.52.4f" profile_name="UDP server" persist="false" />
    <!--<server prefix="4D.49.47.55.45.4c.7e.42.41.52.52.4f" profile_name="UDP server" />-->
  </servers>

  <clients>
    <client name="client1" profile_name="UDP client"/>
    <!--<client name="client2" profile_name="UDP client"/>
    <client name="client3" profile_name="UDP client"/>-->
  </clients>

  <profiles>
    <participant profile_name="UDP server">
      <rtps>
        <!-- server prefix overrides profile specified one -->
        <prefix>
          4D.49.47.55.45.4c.5f.42.41.52.52.4f
        </prefix>
        <builtin>
          <discoveryProtocol>SERVER</discoveryProtocol>
          <metatrafficUnicastLocatorList>
            <locator>
              <udpv4>
                <address>127.0.0.1</address>
                <port>65215</port>
              </udpv4>
            </locator>
          </metatrafficUnicastLocatorList>
        </builtin>        
      </rtps>
    </participant>

    <participant profile_name="UDP client" >
      <rtps>
        <builtin>
          <discoveryProtocol>CLIENT</discoveryProtocol>
          <clientAnnouncementPeriod>
            <sec>1</sec>
          </clientAnnouncementPeriod>
          <discoveryServersList>
            <RemoteServer prefix="4D.49.47.55.45.4c.5f.42.41.52.52.4f">
              <metatrafficUnicastLocatorList>
                <locator>
                  <udpv4>
                    <address>127.0.0.1</address>
                    <port>65215</port>
                  </udpv4>
                </locator>
              </metatrafficUnicastLocatorList>
            </RemoteServer>
          </discoveryServersList>
        </builtin>
      </rtps>
    </participant>   
    
  </profiles>
  
</DS>