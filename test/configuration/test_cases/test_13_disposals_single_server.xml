            <publisher topic="topic1"/>
        </client>
        <client creation_time="11" removal_time="17" name="client6_server1" profile_name="UDP_client6_server1">
            <subscriber removal_time="14" topic="topic1"/>
        </client>

        <!-- test remove repeated
                1.[P1.P2] - 2.[S1.S2] : 1.P2 - 2.S2 -->
